<%= render "shared/header" %>
<div class='main'>
  <% if user_signed_in? %>
    <div class='side-bar-area'>
      <%= render "shared/side_bar" %>
    </div>
  <% end %>
  <%# 画面上部通知部分 %>
  <div class='main-area'>
    <div class='notices-contents'>
      <p class='date'>
        <%= require 'date'
            date = DateTime.now # 現在のDateTimeオブジェクトを取得
            p date.strftime("%Y年%m月%d日") %>
      </p>
      <div class='notices-box'>
        <p class='notice1-title'>
          予定
        </p>
        <p class='notice2-title'>
          通知
        </p>
        <p class='notice3-title'>
          表示
        </p>
      </div>
    </div>
    <%# 画面上部通知部分 %>
    <div class='main-contents'>
      <div class='main-page'>
        <div class='new-articles'>
          new articles
        </div>
        <div class='mostlike-articles'>
          most like articles
        </div>
        <div class='favorite-articles'>
          my favorite articles
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
